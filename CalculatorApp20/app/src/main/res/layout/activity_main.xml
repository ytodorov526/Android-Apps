<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:padding="10pt">
    <EditText

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etShowNumber" android:gravity="end" android:paddingTop="30pt" android:background="#676C6D"
            android:textColor="#F8F8F8"/>
    <TableLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow
                android:layout_weight="1"
                android:layout_marginBottom="1pt"


        android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="AC"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/button11" android:background="#D6D7D7"
                    android:onClick="buClean"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/buPlusMinus" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/buPerc" android:background="#D6D7D7"
                    android:onClick="buPercent"/>
            <Button
                    android:layout_weight="1"
                    android:text="/"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/buDiv" android:background="#EF8D30"
                    android:textColor="#F8F8F8" android:onClick="buOpEvent"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/bu7" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/bu8" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/bu9" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>/>
            <Button
                    android:layout_weight="1"
                    android:text="x"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/buMul" android:background="#EF8D30"
                    android:textColor="#F8F8F8" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/bu4" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/bu5" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/bu6" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>/>
            <Button
                    android:layout_weight="1"
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/buSub" android:background="#EF8D30"
                    android:textColor="#F8F8F8" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_weight="1" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/bu1" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/bu2" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>/>
            <Button
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/bu3" android:background="#D6D7D7"
                    android:onClick="buNumberEvent"/>/>
            <Button
                    android:layout_weight="1"
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/buSum" android:background="#EF8D30"
                    android:textColor="#F8F8F8" android:onClick="buOpEvent"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_marginRight="1pt"
                android:layout_weight="1.04"
                android:text="0"
                android:layout_width="60pt"
                android:layout_height="30pt" android:id="@+id/bu0"
                android:background="#D6D7D7" android:onClick="buNumberEvent"/>
        <Button
                android:layout_marginRight="1pt"
                android:layout_weight="0.466"
                android:text="."
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/buDot"
                android:background="#D6D7D7"
                android:onClick="buNumberEvent"/>/>
        <Button
                android:layout_weight="0.466"
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/buEqual"
                android:background="#EF8D30" android:textColor="#F8F8F8" android:onClick="buEqualEvent"/>
    </LinearLayout>
</LinearLayout>